Includes all the __ACT__ and __AE__ traits.

    namespace boost {
    namespace async {

        template<typename ACT>
        struct act_traits;

        template <typename ACT>
        struct is_movable;

        template <typename ACT>
        struct has_future_if;

        template <typename ACT>
        struct has_thread_if;

        template <typename AE, typename T>
        struct asynchronous_completion_token;

        template <typename AE>
        struct get_future;

    }
    }

