# vi: syntax=python:et:ts=4
Import("env")

env["BOOST_LIB"] = "MATH_TR1"

sources = {
"c99" : Split("""
    acosh
    asinh
    atanh
    cbrt
    copysign
    erfc
    erf
    expm1
    fmax
    fmin
    fpclassify
    hypot
    lgamma
    llround
    log1p
    lround
    nextafter
    nexttoward
    round
    tgamma
    trunc
    """),
"tr1" : Split("""
    assoc_laguerre
    assoc_legendre
    beta
    comp_ellint_1
    comp_ellint_2
    comp_ellint_3
    cyl_bessel_i
    cyl_bessel_j
    cyl_bessel_k
    cyl_neumann
    ellint_1
    ellint_2
    ellint_3
    expint
    hermite
    laguerre
    legendre
    riemann_zeta
    sph_bessel
    sph_legendre
    sph_neumann
    """)
    }
for std in ["c99", "tr1"]:
    for type in ["", "f", "l"]:
        env.Alias("math", env.BoostLibrary("math_" + std + type,
            map(lambda src : "tr1/" + src + type + ".cpp", sources[std])
            )
        )
