# Boost.Socket library Jamfile

# declare the location of this subproject relative to the root
subproject libs/socket/build ;

B_ROOT ?= c:/usr/boost ;

template socket_libs
    ## sources ##
    :
    ## requirements ##
    : <include>$(BOOST_ROOT) <include>$(B_ROOT) <bcc56><*><cxxflags>-w-stl  <msvc><*><cxxflags>-DWIN32 
    ## default build ##
    : <threading>\single/multi <runtime-link>static/dynamic
;


CPP_SOURCE =
  socket_option
  default_socket_impl
  address_info
  any_address
  interface
  impl/impl
  impl/socket_init
  impl/address_storage
  ip4/address 
  ip4/protocol ;

lib boost_socket : <template>socket_libs ../src/$(CPP_SOURCE).cpp ;
