rule assign-test ( name )
{
    return [
        run $(name).cpp /boost/test//boost_unit_test_framework/<link>static ]
        ;
}

test-suite assign :
    [ assign-test detail ]
    [ assign-test ref ]
    [ assign-test put ]
    [ assign-test utility ]
;


