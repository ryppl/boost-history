using testing ;

project :
    : requirements
      # XXX These paths are incorrect.
      <include>../../../../boost
      <include>../../..
    ;

exe helpers
    : helpers.cpp
    ;

test-suite process :
    [ compile all_test.cpp : : ]
    [ compile forward_decls_test.cpp : : ]

    [ run command_line_test.cpp
        : <library>../../../../boost//unit_test_framework
        : : ]

    [ run attributes_test.cpp
        : <library>../../../../boost//unit_test_framework
        : : ]

    [ run systembuf_test.cpp
        : <library>../../../../boost//unit_test_framework
        : : ]

    [ run pipe_test.cpp
        : <library>../../../../boost//unit_test_framework
        : : ]

    [ run child_test.cpp
        : <library>../../../../boost//unit_test_framework
          helpers
        : : ]

    ;
