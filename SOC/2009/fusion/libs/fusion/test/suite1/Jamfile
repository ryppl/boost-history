# bring in rules for testing
import testing ;

project
    : requirements
        <define>BOOST_FUSION_ENABLE_STATIC_ASSERTS
        <warnings>all
        <toolset>gcc:<cxxflags>-Wno-long-long
    ;
    
{
    test-suite fusion_1 : ;

    for local test-file in [ glob-tree *.cpp ]
    {
        run $(test-file) :  :  :  : ;
    }
}
