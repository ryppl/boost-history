#
# Important! Important!
#
# change the environment variable INCLUDE as follows:
#
# C:\>set INCLUDE="c:\Program Files\Microsoft Visual Studio .NET\vc7\include";"c:\Program Files\Microsoft Visual Studio .NET\vc7\PlatformSDK\Include"
#

INC=/Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 "/IC:\Program Files\Microsoft Visual Studio .NET\VC7\INCLUDE" "/IC:\Program Files\Microsoft Visual Studio .NET\VC7\PlatformSDK\include" 



CPPC=cl
NAME_EXE=/Fe


all: test1.exe test2.exe test3.exe test4.exe test5.exe test6.exe test7.exe test8.exe 
# all: test8.exe 

run: all
	test1.exe
	test2.exe
	test3.exe
	test4.exe
	test5.exe
	test6.exe
	test7.exe
	test8.exe


clean:
	del *.exe
	del *.obj


class_a.obj: class_a.cpp
	cl /c class_a.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 


test1.obj: test1.cpp
	cl /c test1.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc /Zm200

test1.exe: test1.obj class_a.obj
	cl test1.obj class_a.obj 

test2.exe: test2.cpp
	cl test2.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 

test3.exe: test3.cpp
	cl test3.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 


test4.obj: test4.cpp
	cl /c test4.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc

test4.exe: test4.obj class_a.obj
	cl test4.obj class_a.obj 

test5.exe: test5.cpp
	cl test5.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 

test6.exe: test6.cpp
	cl test6.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 


test7.exe: test7.cpp
	cl test7.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 

test8.exe: test8.cpp
	cl test8.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 


s.exe: s.cpp
	cl s.cpp /Id:\var\cvsroot\boost-sandbox /Id:\var\lib\boost_1_29_0 /EHsc 

bin:
	mkdir bin




bin\s.exe: bin s.cpp
	gxx s.cpp -o bin\s.exe $(INC)

