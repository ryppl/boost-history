# Boost.Socket library Jamfile

# declare the location of this subproject relative to the root
subproject libs/socket/build ;

CPP_SOURCE =
  socket_option
  default_socket_impl
  address_info
  any_address
  interface
  impl/socket_init
  ip4/address ip4/protocol ;

B_ROOT ?= c:/usr/boost ;

lib boost_socket : ../src/$(CPP_SOURCE).cpp
    :
  <include>$(BOOST_ROOT)
  <include>$(B_ROOT)
    ;