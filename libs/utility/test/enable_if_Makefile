	./enable_if_namespace_disambiguation.exe
	touch enable_if_namespace_disambiguation.run

enable_if_namespace_disambiguation.exe: enable_if_namespace_disambiguation.cpp
	$(CXX) -o enable_if_namespace_disambiguation.exe enable_if_namespace_disambiguation.cpp

enable_if_no_disambiguation.run: enable_if_no_disambiguation.exe
	./enable_if_no_disambiguation.exe
	touch enable_if_no_disambiguation.run

enable_if_no_disambiguation.exe: enable_if_no_disambiguation.cpp
	$(CXX) -o enable_if_no_disambiguation.exe enable_if_no_disambiguation.cpp

