subproject libs/numeric/ublas/blasbindings ;

BLAS_PATH = /home/tk/cvstop/blaslapack/lib ;
BLAS_LIB  = blas g2c ;
SOURCES = main ;

exe main
	: $(SOURCES).cpp 
	  <lib>../ublas$(SUFLIB)
	: <include>$(BOOST_ROOT)
	  <include>$(B_ROOT)
	  <borland><*><cxxflags>"-w-8026 -w-8027 -w-8057 -w-8084 -w-8092"
          <library-path>$(BLAS_PATH)
          <find-library>$(BLAS_LIB)
        : debug release
	;


