subproject libs/numeric/bindings/blas/test ;

BLAS_PATH ?= /usr/lib ;
BLAS_LIB  ?= blas g2c ;

exe blas1
        : blas1.cpp 
        :  <include>$(BOOST_ROOT)
	   <include>$(B_ROOT)
	   <library-path>$(BLAS_PATH)
	   <find-library>$(BLAS_LIB)
        ;

