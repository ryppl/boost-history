subproject libs/stat/test ;

# bring in rules for testing
# SEARCH on testing.jam = $(BOOST_BUILD_PATH) ;
# include testing.jam ;
import testing ;

rule stat-test ( name )
{
    return [ 
      run $(name).cpp 
#      <lib>$(BOOST_ROOT)libs/test/build/boost_test_exec_monitor
      : : : <include>$(BOOST_ROOT) 
           ]
    ;
}

test-suite stat : 
    [ stat-test univariate ]
    [ stat-test bivariate ]
    [ stat-test regression ]
#    [ stat-test multivariate ]
    
    ;

