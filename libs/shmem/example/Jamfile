subproject libs/shmem/example ;

rule demo-shmem-build ( demo-name )
{
    exe $(demo-name)
        : # sources
            $(demo-name).cpp
          #  <lib>../build/boost_shmem
        : # requirements
            <include>$(BOOST_ROOT)  
            <sysinclude>$(BOOST_ROOT)
        : # default build
            release
            <runtime-link>static
    ;
}

demo-shmem-build process_a_example ;
demo-shmem-build process_a_fixed_example ;
demo-shmem-build process_b_example ;
demo-shmem-build process_b_fixed_example ;
demo-shmem-build alloc_example ;
demo-shmem-build named_alloc_example ;


