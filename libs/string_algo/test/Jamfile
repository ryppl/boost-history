# Boost Filesystem Library Build Jamfile

subproject libs/string_algo/test ;

# bring in rules for testing
SEARCH on testing.jam = $(BOOST_BUILD_PATH) ;
include testing.jam ;

test-suite "string_algo"
    : [ run 
            predicate_test.cpp
            conv_test.cpp
            find_test.cpp
            replace_test.cpp
            trim_test.cpp
            regex_test.cpp
            test_main.cpp
          : :
            :
#           <include>$(BOOST_ROOT)     # this automatically points to the boost-sandbox root
            <library-path>$(BOOST)/libs/regex/build/bin-stage/
            <*><debug><find-library>boost_regex_debug
            <*><release><find-library>boost_regex 
            : string_algo
        ]
    ;

