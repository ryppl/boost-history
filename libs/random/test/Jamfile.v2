# bring in rules for testing
import testing ;
import os ;

sprng = [ os.environ SPRNG_ROOT ] ;


project
    : requirements
      <library>../build//boost_random
      <link>static
      <include>../../..
    ;

test-suite "random_parallel"
    :
      [ run lcg64_test.cpp ]
      [ run parameter_test.cpp ]
      [ run buffered_generator_test.cpp ]
      [ run buffered_uniform_01_test.cpp ]
      [ run random_test.cpp ]
    ;

if $(sprng) {
project
    : requirements
      <library>../build//boost_random_sprng
      <link>static
      <include>../../..
    ;
  test-suite random_sprng
    : [ run sprng_test.cpp ]
      [ run sprng_parameter_test.cpp ]
    ;
}
