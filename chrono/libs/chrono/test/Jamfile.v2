    test-suite "ratio"
        :
        [ compile-fail ratio_fail_test1.cpp : <toolset>msvc:<warnings-as-errors>on ]
        [ run ratio_test.cpp  :  :  : <link>static ]
        [ run ratio_test.cpp  ../../system/build :  :  :  : ratio_test_dll ]
